<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Location Image -->
        <ImageView
            android:id="@+id/location_image"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:scaleType="centerCrop"
            android:layout_marginBottom="12dp"
            android:contentDescription="@string/location_image_desc" />

        <!-- Location Name -->
        <TextView
            android:id="@+id/location_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/location_name_placeholder"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp" />

        <!-- Description -->
        <TextView
            android:id="@+id/location_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:layout_marginBottom="16dp" />

        <!-- Rating Prompt -->
        <TextView
            android:id="@+id/review_prompt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rating_prompt"
            android:textStyle="bold"
            android:layout_marginBottom="4dp" />

        <!-- Facilities Icons -->
        <LinearLayout
            android:id="@+id/facilities_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp" />

        <!-- Review Input Title -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/write_review"
            android:textStyle="bold"
            android:layout_marginTop="8dp" />

        <!-- Review Text Field -->
        <EditText
            android:id="@+id/user_review"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="48dp"
            android:hint="@string/review_hint"
            android:padding="12dp"
            android:inputType="textMultiLine"
            android:autofillHints="username"
            android:layout_marginBottom="8dp"
            android:background="@android:drawable/editbox_background_normal"
            android:importantForAutofill="yes"
            android:textColor="#000000"

        />

        <!-- RatingBar -->
        <RatingBar
            android:id="@+id/user_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:numStars="5"
            android:stepSize="1.0"
            android:layout_marginBottom="8dp" />

        <!-- Submit Button -->
        <Button
            android:id="@+id/submit_review"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/submit_review"
            android:backgroundTint="@android:color/holo_blue_light"
            android:textColor="@android:color/white"
            android:minHeight="48dp"
            android:minWidth="88dp"
            android:padding="10dp"
            android:layout_marginBottom="16dp" />

        <!-- Review Section -->
        <LinearLayout
            android:id="@+id/review_section_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="#F2F2F2"
        android:padding="8dp"
        android:layout_marginTop="8dp"
        />

    </LinearLayout>
</ScrollView>
